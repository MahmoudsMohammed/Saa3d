<link rel="stylesheet" href="/stylesheets/chatMain.css" />
<% layout('layouts/boilerplate') %>
    <div class="d-flex row mt-5">
        <% if(!chats.length){ %> 
        <h1> You don't have any chat yet. </h1>  
        <% }else{ %>
            <% for(let chat of chats){ %> 
              <div class="card <%- chat.online ? 'border-success' : 'border-danger'%> mb-3 col-sm-10 mx-sm-2 col-md-5 mx-md-2 col-lg-3 mx-lg-3">
                <div class="rounded-circle mt-3">
                  <img src="<%= chat.imgSrc %>" class="rounded-circle pic">
                </div>
                <div class="card-header bg-transparent <%- chat.online ? 'border-success' : 'border-danger'%>"><a href="/chat/<%= chat.id %>"><span class="h5 text-dark stretched-link"> <%= chat.name %> </span></a></div>
                <div class="card-footer bg-transparent d-flex justify-content-center text-center text-muted h6 <%- chat.online ? 'border-success' : 'border-danger'%>"><%= chat.lstMsg %> </div>
              </div>
            <% }} %> 
    </div>
  <%- include('../partials/footer') %>