<link rel="stylesheet" href="/stylesheets/main.css" />
<% layout('layouts/boilerplate') %>
    <div class="row mt-5">
      <% if(!notifications.length){ %>
        <h1> You don't have any notifications yet. </h1>  
        <% }%> 
          <% for(let notification of notifications){ %> 
            <div class="mt-3 row">
            <div class="card border-light mb-1 offset-1 col-10">
              <div class="card-body">
                <div class=" d-flex justify-content-between border-bottom">
                  <div class="text-danger h5">@<%= notification.user.username %> </div>
                  <% 
                      const formattedDate = notification.date.toLocaleString("en-GB", {
                        day: "numeric", month: "short", hour: "numeric", minute: "2-digit"
                      });
                  %> 
                  <div class="h6"><%= formattedDate %></div>
                </div>
                <p class="card-text h6"><%= notification.body %></p>
                <a href="<%= notification.link %>" class="stretched-link"></a>
            </div>
          </div>
        </div>
      <% } %> 
    </div>