<link rel="stylesheet" href="/stylesheets/main.css" />
<% layout('layouts/boilerplate') %>

<form method="POST" action="/post/new">
      <div class="row mt-5">
        <div class="mt-3 col-12 col-md-8 offset-md-2">
          <div class="card border-light mb-3">
            <!-- 
              <div class="d-flex card-header">
                <button class="text-danger btn col-6"><span class="h5"><%- (currentUser.point ? 'Service Request':"You don't have any points") %></span></button>
                <button class="text-danger btn col-6"> <span class="h5">Add Service</span> </button>
              </div>
             -->
              <div class="card-header text-danger h4"><%- (currentUser.point ? 'Service Request':"You don't have any points") %></div>
            <div class="card-header">
                <input type="text" <%- (!currentUser.point ? 'disabled':'') %> class="form-control signInput" name="header" placeholder="Header..." maxlength="26" required>
            </div>
            
            <div class="card-body">
                <textarea class="form-control" <%- (!currentUser.point ? 'disabled':'') %>  name="body" placeholder="Descripe your order...." cols="3" rows="3" required></textarea>
                <div class="row mt-3">
                    <span class="col-md-6">
                        <p class="h6 d-flex">City:</p>
                      <select class="form-control" name="city" <%- (!currentUser.point ? 'disabled':'') %>>
                        <% for(let city of cities){ %>
                          <option value="<%= city %>"><%= city %> </option>
                       <% } %> 
                      </select>
                    </span>
                    <span class="col-md-6">
                        <p class="h6 d-flex">Points:</p>
                        <input class="form-control" <%- (!currentUser.point ? 'disabled':'') %> type="number" name="point" min="1" value="1" max="<%= currentUser.point %>" required>
                      </span>
                  </div>
            </div>

            <div class="card-footer">
                <button class="mx-1 btn btn-success" <%- (!currentUser.point ? 'disabled':'') %> type="submit">Post</button>
          </div>
 
          </div>
        </div>
        </div>
    </form>
    </div>
    <%- include('../partials/footer') %>
